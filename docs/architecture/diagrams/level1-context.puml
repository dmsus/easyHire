@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

title System Context Diagram for EasyHire

Person(hr, "HR Specialist", "Creates assessments, manages candidates")
Person(candidate, "Candidate", "Takes technical assessments")
Person(tech_expert, "Technical Expert", "Reviews AI-generated questions")
Person(admin, "System Admin", "Manages system configuration")

System(easyhire, "EasyHire Platform", "AI-powered technical assessment for Go developers")

System_Ext(ai_providers, "AI Providers", "Gemini API, OpenRouter")
System_Ext(email, "Email Service", "SendGrid, AWS SES")
System_Ext(ats, "ATS Systems", "Greenhouse, Lever")
System_Ext(sso, "SSO Provider", "Auth0, Okta, Google")

Rel(hr, easyhire, "Uses", "HTTPS")
Rel(candidate, easyhire, "Takes assessments on", "HTTPS")
Rel(tech_expert, easyhire, "Reviews questions on", "HTTPS")
Rel(admin, easyhire, "Administers", "HTTPS")

Rel(easyhire, ai_providers, "Generates questions using", "HTTPS")
Rel(easyhire, email, "Sends notifications via", "SMTP/API")
Rel(easyhire, ats, "Exports candidate data to", "API")
Rel(easyhire, sso, "Authenticates users via", "OAuth/SAML")

@enduml
