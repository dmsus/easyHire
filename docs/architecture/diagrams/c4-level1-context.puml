@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

title System Context Diagram - EasyHire

Person(hr, "HR Specialist", "Creates technical assessments")
Person(candidate, "Candidate", "Takes Go programming tests")
Person(tech_expert, "Technical Expert", "Reviews AI-generated questions")
Person(admin, "System Admin", "Configures platform settings")

System(easyhire, "EasyHire Platform", "AI-powered Go assessment with Fibonacci scoring")

System_Ext(ai_providers, "AI Providers", "Gemini API, OpenRouter")
System_Ext(email, "Email Service", "SendGrid, AWS SES")
System_Ext(ats, "ATS Systems", "Greenhouse, Lever")
System_Ext(sso, "SSO Provider", "Auth0, Okta")

Rel(hr, easyhire, "Uses", "HTTPS")
Rel(candidate, easyhire, "Uses", "HTTPS")
Rel(tech_expert, easyhire, "Uses", "HTTPS")
Rel(admin, easyhire, "Uses", "HTTPS")

Rel(easyhire, ai_providers, "Uses for question generation", "HTTPS")
Rel(easyhire, email, "Sends notifications", "SMTP/API")
Rel(easyhire, ats, "Exports results", "API")
Rel(easyhire, sso, "Authenticates users", "OAuth/SAML")

@enduml
