@startuml
skinparam componentStyle uml2
title Frontend Application Components

package "React SPA" {
  component "HR Dashboard" as hr
  component "Candidate Test Interface" as candidate
  component "Expert Panel" as expert
  component "Admin Console" as admin
}

rectangle "Shared Components" {
  component "API Client" as api
  component "Code Editor" as editor
  component "State Store" as state
  component "Router" as router
}

hr --> api : fetches data
candidate --> api : submits answers
expert --> api : manages questions
admin --> api : configures system

candidate --> editor : uses for coding

hr --> state : manages
candidate --> state : manages
expert --> state : manages
admin --> state : manages

hr --> router : navigates
candidate --> router : navigates
expert --> router : navigates
admin --> router : navigates

@enduml
