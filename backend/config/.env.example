# Server Configuration
SERVER_HOST=localhost
SERVER_PORT=8080
SERVER_MODE=debug
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s
SERVER_IDLE_TIMEOUT=120s

# Database Configuration (PostgreSQL)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_DBNAME=easyhire
DATABASE_SSLMODE=disable

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10

# Security Configuration
SECURITY_JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SECURITY_JWT_PRIVATE_KEY= # Path to private key file (for RSA)
SECURITY_JWT_PUBLIC_KEY= # Path to public key file (for RSA)
SECURITY_ACCESS_TOKEN_EXPIRY=15m
SECURITY_REFRESH_TOKEN_EXPIRY=168h # 7 days
SECURITY_CORS_ORIGINS=*
SECURITY_RATE_LIMIT=100
SECURITY_RATE_LIMIT_TTL=60
SECURITY_PASSWORD_MIN_LENGTH=8
SECURITY_REQUIRE_EMAIL_VERIFICATION=false

# Monitoring
MONITORING_METRICS_ENABLED=true
MONITORING_METRICS_PORT=9090

# AI Configuration
AI_PROVIDER=gemini
AI_API_KEY=your-ai-api-key-here
AI_MODEL=gemini-pro
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1000

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock
DOCKER_TIMEOUT=30
EXECUTION_TIMEOUT=10
